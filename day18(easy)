import math
def binarybattel():
    b=int(input('Enter the time of break:'))
    a=int(input('Enter the time for each round:'))
    n=int(input('Enter the number of round:'))
    rounds=math.log2(n)
    total_time=rounds*a+(rounds-1)*b
    print('Total time=',total_time)

t=int(input('Enter the time taken:'))
for i in range(1,t+1):
    print('Test case:',i)
    binarybattel()
