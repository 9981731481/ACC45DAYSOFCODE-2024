def nperson():
    X=int(input('capicity of geyser:'))
    Y=int(input('capicity of buckets:'))
    if Y<=X:
        person=2*Y
        nop=int(X/person)
        return nop
    else:
        return 0
t=int(input('Enter the test case:'))
for i in range(1,t+1):
    print('Test case:',i)
    print('No of person=',nperson())
