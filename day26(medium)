#chef and string
t=int(input('Enter the test case:'))
for i in range(1,t+1):
    print('Test case:',i)
    N=int(input('No of elements:'))
    num=input('Enter the list elements:').split()
    num=list(int(i) for i in num)
    sum1=0
    for i in range(0,len(num)-1):
        sum1=sum1+abs(num[i]-num[i+1])-1
    print('output=',sum1)
