#reach fast
def steps():
    A=0 #coordinate of chef
    B=0 #coordinate of chefina
    C=0 #increase or decrease the coordinate
    A,B,K=input('Enter the coordinate A B K')
    step=0
    if A<B:
        while A<B:
            A+=K
            step+=1
        print('No of steps:',step)
    else:
        while A>B:
            A-=K
            step+=1
        print('No of steps:',step)

t=int(input('Enter the no of test case:'))
for i in range(1,t+1):
    print('Test case:',i)
    steps()
